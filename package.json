{
  "name": "Quiz-App",
  "version": "1.0.0",
  "scripts": {
    "preminify": "shx mkdir -p src/main/resources/static/js/min src/main/resources/static/css/min && shx rm -f src/main/resources/static/js/min/*.min.js src/main/resources/static/css/min/*.min.css",
    "minify:js:breadcrumb": "uglifyjs src/main/resources/static/js/breadcrumb-truncation.js --compress --mangle -o src/main/resources/static/js/min/breadcrumb-truncation.min.js",
    "minify:js:drawer-icon-toggle": "uglifyjs src/main/resources/static/js/drawer-icon-toggle.js --compress --mangle -o src/main/resources/static/js/min/drawer-icon-toggle.min.js",
    "minify:js:language": "uglifyjs src/main/resources/static/js/language.js --compress --mangle -o src/main/resources/static/js/min/language.min.js",
    "minify:js:quiz-form": "uglifyjs src/main/resources/static/js/quiz-form.js --compress --mangle -o src/main/resources/static/js/min/quiz-form.min.js",
    "minify:js:quiz-play": "uglifyjs src/main/resources/static/js/quiz-play.js --compress --mangle -o src/main/resources/static/js/min/quiz-play.min.js",
    "minify:js:titles": "uglifyjs src/main/resources/static/js/titles.js --compress --mangle -o src/main/resources/static/js/min/titles.min.js",
    "minify:js:topics": "uglifyjs src/main/resources/static/js/topics.js --compress --mangle -o src/main/resources/static/js/min/topics.min.js",
    "minify:js": "npm-run-all -p minify:js:breadcrumb minify:js:drawer-icon-toggle minify:js:language minify:js:quiz-form minify:js:quiz-play minify:js:titles minify:js:topics",
    "minify:css": "cleancss -o \"src/main/resources/static/css/min/styles.min.css\" \"src/main/resources/static/css/*.css\"",
    "minify:html": "html-minifier-terser --input-dir \"src/main/resources/static\" --output-dir \"src/main/resources/static\" --file-ext \"html\" --collapse-whitespace --remove-comments --minify-css true --minify-js true",
    "minify": "npm-run-all -s preminify minify:js minify:css minify:html",
    "obfuscate": "javascript-obfuscator src/main/resources/static/js/*.js --output src/main/resources/static/js/obfuscated/"
  },
  "devDependencies": {
    "uglify-js": "^3.17.4",
    "javascript-obfuscator": "^4.0.1",
    "clean-css-cli": "^5.6.3",
    "html-minifier-terser": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.4"
  }
}